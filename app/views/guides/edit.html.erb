<h1>Editing guide</h1>

<% form_for(@guide) do |f| %>
  <%= f.error_messages %>

	<p>
	  <%= f.label :city_id %>
	  <%= f.text_field :city_id %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :fun_facts %>
		<%= f.text_area :fun_facts %>
	</p>
	<p>
		<%= f.label :is_published %>
		<%= f.radio_button :is_published, :true %> True
		<%= f.radio_button :is_published, :false %> False
	</p>
	<p>
		<%= f.label :is_free %>
		<%= f.radio_button :is_free, :true %> True
		<%= f.radio_button :is_free, :false %> False
	</p>
	<p>
	  <%= f.submit "Update" %>
	</p>
<% end %>

<%= link_to 'Show', @guide %> |
<%= link_to 'Back', guides_path %>
