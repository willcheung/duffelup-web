<h1>New landmark</h1>

<% form_for([@city, @landmark]) do |f| %>
  <%= f.error_messages %>

	<p>
	    <%= f.label :name %>
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :lat %>
	    <%= f.text_field :lat %>
	  </p>
	  <p>
	    <%= f.label :lng %>
	    <%= f.text_field :lng %>
	  </p>
  <p>
    <%= f.label :guide_id %>
    <%= f.text_field :guide_id %>
  </p>
	<p>
	    <%= f.label :address %>
	    <%= f.text_area :address, :rows => 3 %>
	</p>
	<p>
	    <%= f.label :description %>
	    <%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :fun_facts %>
		<%= f.text_area :fun_facts %>
	</p>
	<p>
		<%= f.label :tips %>
		<%= f.text_area :tips %>
	</p>
	
  <%- fields_for @landmark.stamp do |builder| -%>
    <p>
      <%= builder.label :name, "Stamp name" %>
      <%= builder.text_field :name %>
    </p>
    <p>
      <%= builder.label :image_url, "Stamp image url" %>
      <%= builder.text_field :image_url %>
    </p>
  <%- end -%>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', city_landmarks_path(@city) %>
