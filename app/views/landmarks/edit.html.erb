<h1>Editing landmark</h1>

<% form_for([@guide, @landmark]) do |f| %>
  <%= f.error_messages %>

	<p>
	    <%= f.label :name %>
	    <%= f.text_field :name %>
	  </p>
	<p>
	    <%= f.label :image_url %>
	    <%= f.text_field :image_url %>
	  </p>
	  <p>
	    <%= f.label :lat %>
	    <%= f.text_field :lat %>
	  </p>
	  <p>
	    <%= f.label :lng %>
	    <%= f.text_field :lng %>
	  </p>
	<p>
	    <%= f.label :address %>
	    <%= f.text_area :address, :rows => 3 %>
	</p>
	<p>
	    <%= f.label :description %>
	    <%= f.text_area :description %>
	  </p>
	<p>
		<%= f.label :fun_facts %>
		<%= f.text_area :fun_facts %>
	</p>
	<p>
		<%= f.label :tips %>
		<%= f.text_area :tips %>
	</p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', [@guide, @landmark] %> |
<%= link_to 'Back', guide_landmarks_path(@guide) %>
