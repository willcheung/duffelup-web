<h1>Listing landmarks for <%= @guide.city.city %> (id = <%= @guide.city_id %>)</h1>

<% for landmark in @landmarks %>

		<p>
			<strong>Image:</strong> <img src="<%= landmark.image_url %>"/><br/>
			<%= landmark.image_url %>
		</p>
		<p>
		  <strong>Title:</strong> <%= landmark.name %>
		</p>
		<p>
			<strong>Address:</strong> <br/><%= landmark.address %>
		</p>
		<p>
		  <strong>Description:</strong> <%= landmark.description %>
		</p>
		<p>
		  <strong>Fun Facts:</strong> <%= landmark.fun_facts %>
		</p>
		<p>
		  <strong>Tips:</strong> <%= landmark.tips %>
		</p>
		<p>
		  <strong>lat:</strong> <%= landmark.lat %>
		</p>
		<p>
		  <strong>lng:</strong> <%= landmark.lng %>
		</p>
		<p><strong>Map to check lat,lng</strong>
			<img src="http://maps.google.com/maps/api/staticmap?center=<%=landmark.lat%>,<%=landmark.lng%>&zoom=16&size=400x300&sensor=false&markers=color:blue|<%=landmark.lat%>,<%=landmark.lng%>">
		</p>

    <%= link_to 'Show', [@guide, landmark] %> |
    <%= link_to 'Edit', edit_guide_landmark_path(@guide, landmark) %> |
    <%= link_to 'Destroy', [@guide, landmark], :confirm => 'Are you sure?', :method => :delete %>

<% end %>


<br/><br/>

<%= link_to 'New landmark', new_guide_landmark_path(@guide) %> | <%= link_to 'Back', guide_path(@guide) %>
