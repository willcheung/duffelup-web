<%= render :partial => "settings" %>

<script type="text/javascript">
	$('tb2').addClassName('selected');
</script>

<% unless current_user.crypted_password.nil? or current_user.crypted_password.empty? %>
	<h2 class="home">Change Password</h2>

	<% form_for :user, :url => { :controller => 'users', :action => 'password_save' } do |f| %>
	<div  class="form-group"><label for="current_password">Current Password</label>
	<%= password_field_tag :current_password, @current_password, :size => User::PASSWORD_SIZE,
	  								:maxlength => User::PASSWORD_MAX_LENGTH %></div>

	<div class="form-group"><label for="password">New Password</label>
	<%= password_field_tag :password, {}, :size => User::PASSWORD_SIZE,
	  								:maxlength => User::PASSWORD_MAX_LENGTH %></div>

	<div id="form-submit"><%= submit_tag 'Save', :class => "submit" %></div>

	<% end %>
<% else %>
	<h2 class="home">Set a Password</h2>
	<p>If you're signed in via Facebook or Twitter, you can take advantage of <br/>email or username login  by setting a password.</p>
	<br/>
	<% form_for :user, :url => { :controller => 'users', :action => 'password_save' } do |f| %>

	<div class="form-group"><label for="password">New Password</label>
	<%= password_field_tag :password, {}, :size => User::PASSWORD_SIZE,
	  								:maxlength => User::PASSWORD_MAX_LENGTH %></div>
	
	<div class="form-group"><label for="password">Retype Password</label>
	<%= password_field_tag :retype_password, {}, :size => User::PASSWORD_SIZE,
	  								:maxlength => User::PASSWORD_MAX_LENGTH %></div>

	<div id="form-submit"><%= submit_tag 'Save', :class => "submit" %></div>
	<% end %>
<% end %>