<div class="idea-actions">
	<% if sortable_tile %>
		<span class="idea-edit"><a title="Edit" data-toggle="modal" href="#edit-idea" onclick="jQuery('#edit-idea').load('/trips/<%=@trip.permalink%>/ideas/<%=event.id%>/edit');">edit</a></span>
		
		<span class="delete"><%= link_to_remote "[x]", 
				{ :url => trip_idea_path(:permalink => @trip.permalink, :id => event.id), 
				  :confirm => "Are you sure you want to delete #{event.title}?", 
				  :method => :delete,
				  :loading => "$('deleting-indicator').show();",
				  :complete => "$('deleting-indicator').hide();" },
				  :title => "Delete",
				  :alt => "Delete",
				  :title => "Delete" %></span>
	<% end %>

	<span class="idea-copy"><%= build_url_for_copy("copy", event.id, @trip.permalink) %></span>
	<span class="idea-info"><a title="More Info" href="<%=@trip.permalink%>/ideas/<%=event.id%>">more info</a></span>
</div>
