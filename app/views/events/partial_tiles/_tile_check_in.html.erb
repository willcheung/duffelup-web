<li id="list_<%= event.list.to_s %>_<%= event.id.to_s %>" <% if sortable_tile %> class="sortable" <% end %>>
	<div class="checkin">
		<div class="idea-actions">
			<% if @users.include?(current_user) %>
			<span class="delete"><%= link_to_remote "[x]", 
					{ :url => trip_idea_path(:permalink => @trip.permalink, :id => event.id), 
					  :confirm => "Are you sure you want to delete #{event.title}?", 
					  :method => :delete },
					  :title => "Delete",
					  :alt => "Delete" %></span>
			<% end %>

			<span class="idea-info-inverse"><a href="<%=@trip.permalink%>/ideas/<%=event.id%>" title="More Info">more info</a></span>

		</div>
		<div class="detail">
			<img src="<%= get_image_url(event) %>" alt="<%= event.title %>"/>
		</div>
		<div class="caption">
			<%= simple_format(h(truncate(event.title, :length => 80))) %>
			<!--<%= simple_format(h(truncate(event.note, :length => 100))) %>-->
			<%- unless event.author.nil? -%><p style="margin-top:3px;text-align:left;font-size:10px;">by <%= event.author %></p><%- end -%>
		</div>
	</div>
</li>