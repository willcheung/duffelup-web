<li id="list_0_<%= event.id %>" <% if @users.include?(current_user) %> class="sortable" <% end %>>
	<div class="checkin">
		<div class="idea-actions">
			<% if @users.include?(current_user) %>
			<span class="delete"><%= link_to_remote "[x]", 
					{ :url => trip_idea_path(:permalink => @trip.permalink, :id => event.id), 
					  :confirm => "Are you sure you want to delete #{event.title}?", 
					  :method => :delete },
					  :title => "Delete",
					  :alt => "Delete",
					  :style => "right:-9px;top:-4px;" %></span>
			<% end %>
		</div>
		<div class="detail">
			<img src="<%= get_image_url(event) %>" alt="<%= event.title %>"/>
		</div>
		<div class="caption">
			<%= simple_format(h(truncate(event.title, 80))) %>
			<!--<%= simple_format(h(truncate(event.note, :length => 100))) %>-->
			<%- unless event.author.nil? -%><p style="margin-top:3px;text-align:left;font-size:10px;">by <a href="/<%= event.author %>"><%= event.author %></a></p><%- end -%>
		</div>
	</div>
</li>