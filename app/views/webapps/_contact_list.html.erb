<h3>Already on Duffel - Add as Friend:</h3>

<% if !@users.empty? %>
<ul class="user-list unstyled">
<% for u in @users %>
	<li class="user">
	<div class="avatar"><%= display_thumbnail(u) %></div>
	<%= check_box_tag "friend_invitation[]", u.username, true %>
	<%= display_user_name(u) %>
	</li>
<% end %>
</ul>
<% end %>

<div class="clearfix"><p>&nbsp;</p></div>

<h3 style="padding-top: 25px;">Invite others:</h3>
<ul class="unstyled">
<% for u in @not_users %>
	<li class="not-member">
		<p style="line-height:13px"><input style="margin: 0;" type="checkbox" name="beta_invitation[recipient_email][]" id="email_<%= u %>" value="<%= u[:email] %>" />
		<%= u[:name] %></p>
		<p style="line-height:13px">&nbsp;&nbsp;&nbsp;&nbsp;<strong class="t11 mute"><%= u[:email]%></strong></p>
	</li>
<% end %>

<% if @not_users.empty? %>
	<p>Didn't find anyone. Did you enter the correct email / password?</p>
<% end %>
</ul>